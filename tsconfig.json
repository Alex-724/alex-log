{
  "compilerOptions": {
    "target": "ES6",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist/esm",
    "removeComments": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "old",
    "test",
    ".github"
  ]
}